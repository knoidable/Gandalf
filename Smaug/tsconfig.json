{
  "compilerOptions": {
    "baseUrl": ".",
    "module": "ESNext",
    "target": "es2021",
    "lib": ["DOM", "ESNext"],
    "strict": true,
    "esModuleInterop": true,
    "incremental": false,
    "skipLibCheck": true,
    "jsx": "preserve",
    "moduleResolution": "nodenext",
    "noImplicitAny": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "resolveJsonModule": true,
    "noUnusedLocals": true,
    "strictNullChecks": true,
    "allowJs": true,
    "forceConsistentCasingInFileNames": true,
    "types": [
      "vite/client"
    ],
    "paths": {
      "~/*": ["src/*"]
    }
  },
  "ts-node": {
    "esm": true
  },
  "exclude": ["dist", "node_modules"]
}
