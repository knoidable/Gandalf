<!DOCTYPE html>
<html lang="en">
<head>
    <%- include("templates/head", {page_title: "Universe", page_description: "Universe"}); %>
</head>
<body class="page-universe">
<header>
    <%- include("templates/header"); %>
</header>
<main>
    <div class="container">
        <div class="row">
            <% if(page == "p") { %>
                <div class="col-12">
                    <div class="content">
                        <% if(typeof (planet) != "undefined") { %>
                            <h2><%= planet.rulername %> of <%= planet.planetname %></h2>
                        <% } else { %>
                            <h2>Planets</h2>
                            <table id="table-planets" class="table table-sm table-striped table-bordered">
                                <thead>
                                <tr>
                                    <th scope="col">X</th>
                                    <th scope="col">Y</th>
                                    <th scope="col">Z</th>
                                    <th scope="col">Planet Name</th>
                                    <th scope="col">Ruler Name</th>
                                    <th scope="col">Race</th>
                                    <th scope="col">Size</th>
                                    <th scope="col">Score</th>
                                    <th scope="col">Value</th>
                                    <th scope="col">XP</th>
                                </tr>
                                </thead>
                                <tbody>
                                <% for(var i = 0; i < planets.length; i++) { %>
                                    <tr>
                                        <td><%= planets[i].x %></td>
                                        <td><%= planets[i].y %></td>
                                        <td><%= planets[i].z %></td>
                                        <td><%= planets[i].planetname %></td>
                                        <td><%= planets[i].rulername %></td>
                                        <td class="<%= planets[i].race ? planets[i].race.toLowerCase() : '' %>"><%= planets[i].race %></td>
                                        <td><%= planets[i].size %></td>
                                        <td><%= planets[i].score %></td>
                                        <td><%= planets[i].value %></td>
                                        <td><%= planets[i].xp %></td>
                                    </tr>
                                <% } %>
                                </tbody>
                            </table>
                            <script>
															$(function () {
																var table = $('#table-planets').DataTable({
																	"paging": true,
																	"info": false,
                                                                  language: {
                                                                    searchPlaceholder: "Search.."
                                                                  }
																});
																table.page.len(10).draw();
															});
                            </script>
                        <% } %>
                    </div>
                </div>
            <% } else if(page == "g") { %>
                <div class="col-12">
                    <div class="content">
                        <% if(typeof (galaxy) != "undefined") { %>
                            <h2><%= galaxy.name %></h2>
                        <% } else { %>
                            <h2>Galaxies</h2>
                            <table id="table-galaxy" class="table table-sm table-striped table-bordered">
                                <thead>
                                <tr>
                                    <th scope="col">X</th>
                                    <th scope="col">Y</th>
                                    <th scope="col">Name</th>
                                    <th scope="col">Size</th>
                                    <th scope="col">Score</th>
                                    <th scope="col">Value</th>
                                    <th scope="col">XP</th>
                                </tr>
                                </thead>
                                <tbody>
                                <% for(var i = 0; i < galaxies.length; i++) { %>
                                    <tr>
                                        <td><%= galaxies[i].x %></td>
                                        <td><%= galaxies[i].y %></td>
                                        <td><%= galaxies[i].name %></td>
                                        <td><%= galaxies[i].size %></td>
                                        <td><%= galaxies[i].score %></td>
                                        <td><%= galaxies[i].value %></td>
                                        <td><%= galaxies[i].xp %></td>
                                    </tr>
                                <% } %>
                                </tbody>
                            </table>
                            <script>
															$(function () {
																var table = $('#table-galaxy').DataTable({
																	"paging": true,
																	"info": false,
                                                                  language: {
                                                                    searchPlaceholder: "Search.."
                                                                  }
																});
																table.page.len(10).draw();
															});
                            </script>
                        <% } %>
                    </div>
                </div>
            <% } else if(page == "c") { %>
                <div class="col-12">
                    <div class="content">
                        <% if(typeof (cluster) != "undefined") { %>
                            <h2>Cluster <%= cluster.x %></h2>
                        <% } else { %>
                            <h2>Clusters</h2>
                            <table id="table-cluster" class="table table-sm table-striped table-bordered">
                                <thead>
                                <tr>
                                    <th scope="col">X</th>
                                    <th scope="col">Size</th>
                                    <th scope="col">Score</th>
                                    <th scope="col">Value</th>
                                    <th scope="col">XP</th>
                                </tr>
                                </thead>
                                <tbody>
                                <% for(var i = 0; i < clusters.length; i++) { %>
                                    <tr>
                                        <td><%= clusters[i].x %></td>
                                        <td><%= clusters[i].size %></td>
                                        <td><%= clusters[i].score %></td>
                                        <td><%= clusters[i].value %></td>
                                        <td><%= clusters[i].xp %></td>
                                    </tr>
                                <% } %>
                                </tbody>
                            </table>
                            <script>
															$(function () {
																$('#table-cluster').DataTable({
																	"paging": false,
																	"info": false,
                                                                  language: {
                                                                    searchPlaceholder: "Search.."
                                                                  }
																});
															});
                            </script>
                        <% } %>
                    </div>
                </div>
            <% } else if(page == "a") { %>
                <div class="col-12">
                    <div class="content">
                        <% if(typeof (alliance) != "undefined") { %>
                            <h2><%= alliance.name %></h2>
                        <% } else { %>
                            <h2>Alliances</h2>
                            <table id="table-alliance" class="table table-sm table-striped table-bordered">
                                <thead>
                                <tr>
                                    <th scope="col">Name</th>
                                    <th scope="col">Size</th>
                                    <th scope="col">Members</th>
                                    <th scope="col">Points</th>
                                    <th scope="col">Avg. Score</th>
                                    <th scope="col">Score</th>
                                </tr>
                                </thead>
                                <tbody>
                                <% for(var i = 0; i < alliances.length; i++) { %>
                                    <tr>
                                        <td><%= alliances[i].name %></td>
                                        <td><%= alliances[i].size %></td>
                                        <td><%= alliances[i].members %></td>
                                        <td><%= alliances[i].points %></td>
                                        <td><%= alliances[i].score_avg %></td>
                                        <td><%= alliances[i].score %></td>
                                    </tr>
                                <% } %>
                                </tbody>
                            </table>
                            <script>
															$(function () {
																$('#table-alliance').DataTable({
																	"paging": false,
																	"info": false,
																});
                                                              language: {
                                                                searchPlaceholder: "Search.."
                                                              }
															});
                            </script>
                        <% } %>
                    </div>
                </div>
            <% } else { %>
                <div class="col-12">
                    <div class="content">
                        <h2>Universe</h2>

                    </div>
                </div>
            <% } %>
        </div>
    </div>
</main>
<footer>
    <%- include("templates/footer"); %>
</footer>
</body>
</html>
