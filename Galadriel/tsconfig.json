{
  "compilerOptions": {
    "module": "ESNext",
    "target": "es2021",
    "lib": ["DOM", "ESNext"],
    "strict": true,
    "esModuleInterop": true,
    "incremental": false,
    "skipLibCheck": true,
    "moduleResolution": "nodenext",
    "noImplicitAny": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "outDir": "./dist",
    "sourceMap": true,
    "declaration": true
  },
  "typeRoots": [
    "./node_modules/@types/"
  ],
  "include": ["src/**/*"],
  "exclude": ["node_modules", "**/*.example.ts"]
}