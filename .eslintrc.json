
{
  "root": true,
  "plugins": [],
  "env": {
    "browser": true,
    "commonjs": true,
    "node": true,
    "mongo": true,
    "es2022": true
  },
  "parserOptions": {
    "sourceType": "module",
    "ecmaFeatures": {
      "impliedStrict": true,
      "experimentalObjectRestSpread": true
    }
  },
  "rules": {
    "indent": ["error", 4],
    "quotes": ["error", "double"],
    "semi": ["error", "always"],
    "linebreak-style": ["error", "unix"]
  }
}
